{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es6",
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "build/modules",
      "module": "commonjs",
      "resolveJsonModule": true,
      // "strictNullChecks": true,
      "jsx": "react"
    },
    "include": [
      "src/game/**/*.ts",
      "src/client/**/*.ts",
      "src/client/**/*.tsx",
      "src/engine/**/*.ts", "src/game/tools/Tool.ts"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }